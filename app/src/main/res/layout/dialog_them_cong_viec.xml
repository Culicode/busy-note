<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#489ff0"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <TextView
        android:id="@+id/textThem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
android:textStyle="bold"
        android:textColor="#343cde"
        android:text="Thêm công việc"
        android:textSize="70px" />

    <EditText
        android:id="@+id/edittextTenCV"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nhập tên công việc"
        android:textColor="#4449ef"
        android:textStyle="italic" />

    <Button
        android:id="@+id/buttonThem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"


        android:layout_marginTop="177dp"
        android:background="#fae605"
        android:text="Thêm"
        android:textColor="#170101"
        android:textSize="39px" />

    <Button
        android:id="@+id/buttonHuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edittextTenCV"

        android:layout_alignTop="@+id/buttonThem"
android:textColor="#000000"
        android:background="#eb3030"
        android:text="Hủy"
        android:textAlignment="center"
        android:textSize="39px" />
</RelativeLayout>